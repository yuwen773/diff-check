<Window x:Class="AI.DiffAssistant.GUI.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于 diff-check"
        Height="350"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False"
        Icon="pack://siteoforigin:,,,/diff-check.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://siteoforigin:,,,/diff-check.png" Width="48" Height="48"/>
                <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="diff-check" FontSize="24" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- 版本信息 -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="版本号" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock x:Name="VersionText" FontSize="14" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- 作者信息 -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="作者" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock FontSize="14" Text="AI Diff Assistant Team" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- 官网信息 -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="官网" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock FontSize="14">
                        <Hyperlink NavigateUri="https://github.com/yuwen773/diff-check">https://github.com/yuwen773/diff-check</Hyperlink>
                    </TextBlock>
                </StackPanel>

                <!-- 版权信息 -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="版权" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock FontSize="14" Text="© 2024 AI Diff Assistant. 保留所有权利。" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- 更新渠道 -->
                <StackPanel>
                    <TextBlock Text="更新渠道" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock FontSize="14" Text="GitHub Releases: 检查最新版本和更新" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- 按钮区域 -->
        <Border Grid.Row="2" Background="{DynamicResource SecondaryBrush}" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="确定" Width="100" Height="35" Click="OKButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
