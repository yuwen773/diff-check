<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 圆角定义 -->
    <CornerRadius x:Key="CornerRadius4">4,4,4,4</CornerRadius>
    <CornerRadius x:Key="CornerRadius6">6,6,6,6</CornerRadius>
    <CornerRadius x:Key="CornerRadius8">8,8,8,8</CornerRadius>

    <!-- 基础圆角 (4px) -->
    <Thickness x:Key="BorderRadius4">4</Thickness>

    <!-- 亚克力模拟效果 - 深色主题 -->
    <LinearGradientBrush x:Key="AcrylicDarkBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#1E1E1E"/>
        <GradientStop Offset="1" Color="#252525"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AcrylicSurfaceDarkBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#2D2D2D"/>
        <GradientStop Offset="1" Color="#2A2A2A"/>
    </LinearGradientBrush>

    <!-- 亚克力模拟效果 - 浅色主题 -->
    <LinearGradientBrush x:Key="AcrylicLightBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#FFFFFF"/>
        <GradientStop Offset="1" Color="#F8F8F8"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AcrylicSurfaceLightBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#F5F5F5"/>
        <GradientStop Offset="1" Color="#F0F0F0"/>
    </LinearGradientBrush>

    <!-- 悬停过渡画刷 -->
    <LinearGradientBrush x:Key="AccentHoverGradientDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#2B9AF5"/>
        <GradientStop Offset="1" Color="#2080D0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentHoverGradientLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#1084D8"/>
        <GradientStop Offset="1" Color="#006CC1"/>
    </LinearGradientBrush>

    <!-- 阴影效果 -->
    <DropShadowEffect x:Key="CardShadow" BlurRadius="12" ShadowDepth="2" Opacity="0.15"/>
    <DropShadowEffect x:Key="CardShadowHover" BlurRadius="16" ShadowDepth="4" Opacity="0.25"/>
    <DropShadowEffect x:Key="ButtonShadow" BlurRadius="8" ShadowDepth="1" Opacity="0.2"/>

    <!-- 遮罩透明度 -->
    <SolidColorBrush x:Key="OverlayDark" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="OverlayLight" Color="#FFFFFF"/>

</ResourceDictionary>
