<UserControl x:Class="AI.DiffAssistant.GUI.Controls.ToastView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AI.DiffAssistant.GUI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="320">
    <UserControl.Resources>
        <Storyboard x:Key="ToastFadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.2"
                             FillBehavior="HoldEnd"/>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="ToastBorder"
            Background="{DynamicResource ToastSuccessBg}"
            CornerRadius="{DynamicResource CornerRadius6}"
            Padding="12,10"
            MinWidth="280"
            MaxWidth="400"
            Effect="{DynamicResource CardShadow}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 图标 -->
            <TextBlock Grid.Column="0"
                       Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=local:ToastView}}"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ToastType, RelativeSource={RelativeSource AncestorType=local:ToastView}}"
                                         Value="Success">
                                <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ToastType, RelativeSource={RelativeSource AncestorType=local:ToastView}}"
                                         Value="Warning">
                                <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ToastType, RelativeSource={RelativeSource AncestorType=local:ToastView}}"
                                         Value="Error">
                                <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- 消息 -->
            <TextBlock Grid.Column="1"
                       Text="{Binding Message, RelativeSource={RelativeSource AncestorType=local:ToastView}}"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       FontSize="12"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="280"/>

            <!-- 关闭按钮 -->
            <Button Grid.Column="2"
                    Content="✕"
                    Width="24" Height="24"
                    Padding="0"
                    FontSize="12"
                    Background="Transparent"
                    Foreground="{DynamicResource TextSecondaryBrush}"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="8,0,0,0"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
