<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 深色主题资源 -->

    <!-- 背景色 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="CardBrush" Color="#3D3D3D"/>
    <SolidColorBrush x:Key="TabItemBackground" Color="#2D2D2D"/>

    <!-- 文字颜色 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#808080"/>

    <!-- 边框颜色 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#505050"/>
    <SolidColorBrush x:Key="BorderFocusedBrush" Color="#60B5FF"/>

    <!-- 强调色 -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#2B9AF5"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#005A9E"/>

    <!-- 成功/警告/错误颜色 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4EC9B0"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#CCA700"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F14C4C"/>

    <!-- TabControl 样式 -->
    <SolidColorBrush x:Key="TabSelectedBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TabUnselectedBrush" Color="#2D2D2D"/>

    <!-- 分隔线 -->
    <SolidColorBrush x:Key="SeparatorBrush" Color="#404040"/>
</ResourceDictionary>
