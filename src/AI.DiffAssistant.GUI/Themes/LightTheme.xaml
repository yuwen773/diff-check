<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 浅色主题资源 -->

    <!-- 背景色 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabItemBackground" Color="#E8E8E8"/>

    <!-- 文字颜色 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#333333"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#999999"/>

    <!-- 边框颜色 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="BorderFocusedBrush" Color="#0078D4"/>

    <!-- 强调色 -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#1084D8"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#F5F5F5"/>

    <!-- 成功/警告/错误颜色 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#D4EDDA"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="#FFF3CD"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC3545"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="#F8D7DA"/>

    <!-- TabControl 样式 -->
    <SolidColorBrush x:Key="TabSelectedBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabUnselectedBrush" Color="#E8E8E8"/>

    <!-- 分隔线 -->
    <SolidColorBrush x:Key="SeparatorBrush" Color="#E0E0E0"/>

    <!-- Toast 通知颜色 -->
    <SolidColorBrush x:Key="ToastSuccessBg" Color="#D4EDDA"/>
    <SolidColorBrush x:Key="ToastSuccessBorder" Color="#28A745"/>
    <SolidColorBrush x:Key="ToastWarningBg" Color="#FFF3CD"/>
    <SolidColorBrush x:Key="ToastWarningBorder" Color="#FFC107"/>
    <SolidColorBrush x:Key="ToastErrorBg" Color="#F8D7DA"/>
    <SolidColorBrush x:Key="ToastErrorBorder" Color="#DC3545"/>

    <!-- Loading 颜色 -->
    <SolidColorBrush x:Key="LoadingRingBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="LoadingRingTrackBrush" Color="#E0E0E0"/>
</ResourceDictionary>
